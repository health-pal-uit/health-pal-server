# ===============================
# DATABASE CONFIGURATION
# ===============================
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password_here
DB_DATABASE=health-pal-db

# ===============================
# SUPABASE CONFIGURATION
# ===============================
# Get these from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your_supabase_anon_or_service_role_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# ===============================
# GOOGLE OAUTH2 CONFIGURATION
# ===============================
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Google Fit Integration
GOOGLE_FIT_CALLBACK_URL=http://localhost:3000/google-fit/callback

# Frontend URL for OAuth redirects (use your public URL for mobile/production)
# Examples:
#   - Local web: http://localhost:3001
#   - Production web: https://yourdomain.com
#   - Mobile deep link: yourapp://oauth-callback
FRONTEND_URL=http://localhost:3001

# ===============================
# SUPABASE STORAGE BUCKETS
# ===============================
# These bucket names should match your Supabase Storage bucket names
AVATAR_BUCKET_NAME=avatars
POST_IMG_BUCKET_NAME=post-imgs
POST_VIDEO_BUCKET_NAME=post-videos
CHAT_IMG_BUCKET_NAME=chat-imgs
CHALLENGE_IMG_BUCKET_NAME=challenge-imgs
MEDAL_IMG_BUCKET_NAME=medal-imgs

# ===============================
# FIREBASE ADMIN SDK CONFIGURATION
# ===============================
# Note: Replace actual newlines in PRIVATE_KEY with \n
PROJECT_ID=your_project_id
PRIVATE_KEY=your_private_key
CLIENT_EMAIL=your_client_email

# ===============================
# APPLICATION CONFIGURATION
# ===============================
# Port the server will run on (default: 3001)
PORT=3001

# Node environment (development, production, test)
NODE_ENV=development
